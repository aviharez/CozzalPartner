<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:background="@drawable/rect_white_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="9dp"
    android:layout_marginRight="17dp"
    android:layout_marginLeft="15dp"
    android:orientation="horizontal">


    <ImageView

        android:id="@+id/image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:src="@drawable/rounded_list"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imron Abu Laiz"
                android:textSize="12.5sp"
                android:textColor="#a9a9b0"/>

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_brightness_1_black_24dp"/>

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18BF"
                android:textSize="12.5sp"
                android:textColor="#a9a9b0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:id="@+id/tv_desc"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengeluaran WiFi"
                android:textColor="#3b3b3b"
                android:textSize="13sp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:id="@+id/tv_nominal"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 400.000"
                android:textColor="#3b3b3b"
                android:textSize="13sp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>