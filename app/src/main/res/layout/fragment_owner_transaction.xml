<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rect_bg">

                <customfonts.EditText__SF_Pro_Display_Regular
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:inputType="text"
                    android:hint="Cari transaksi disini"
                    android:textColor="#a9a9b0"/>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_search_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <customfonts.MyTextView_SF_Pro_Display_Bold
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction"
                    android:textSize="24sp"
                    android:textColor="#3b3b3b"/>

                <!--<ImageView-->
                    <!--android:layout_marginTop="4dp"-->
                    <!--android:layout_width="25dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/sort" />-->

            </LinearLayout>

            <android.support.design.widget.TabLayout
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                app:tabMode="scrollable"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="#118df0"
                app:tabSelectedTextColor="#3b3b3b"
                app:tabTextColor="#a9a9b0"
                android:id="@+id/tablayout1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#efefef"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp"/>

        </LinearLayout>

    <!--</ScrollView>-->


</RelativeLayout>